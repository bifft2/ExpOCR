<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/expense_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp">

        <TextView
            android:id="@+id/expense_list_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            tools:text="Month"
            android:textColor="?android:attr/textColorTertiary" />

        <TextView
            android:id="@+id/expense_list_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/expense_list_month"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            tools:text="Day"
            android:textColor="?android:attr/textColorTertiary" />
        <TextView
            android:id="@+id/expense_list_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expense_list_month"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            tools:text="Year"
            android:textColor="?android:attr/textColorTertiary" />

    </RelativeLayout>

    <TextView
        android:id="@+id/expense_list_balance"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="2dp"
        android:maxLines="1"
        android:paddingEnd="4dp"
        tools:text="Balance"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:paddingRight="4dp"
        android:text="bold"/>


    <TextView
        android:id="@+id/expense_list_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toStartOf="@id/expense_list_balance"
        android:layout_toEndOf="@id/expense_list_date"
        android:layout_toLeftOf="@id/expense_list_balance"
        android:layout_toRightOf="@id/expense_list_date"
        tools:text="Title"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:text="bold"
        android:textColor="@color/black" />




</RelativeLayout>