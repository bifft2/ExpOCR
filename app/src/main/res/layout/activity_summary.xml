<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ap_white"
    android:orientation="vertical"
    tools:context="com.example.mihika.expocr.SummaryActivity">

    <com.androidplot.pie.PieChart
        android:id="@+id/mySimplePieChart"
        androidPlot.title.labelPaint.textSize="70"
        androidPlot.title.text="Expenses by Category"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        app:paddingTop="20dp" />

</LinearLayout>